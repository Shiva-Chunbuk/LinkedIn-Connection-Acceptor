{
    "name": "LinkedIn Connection Acceptor",
    "version": "1.0",
    "manifest_version": 2,
    "description": "Automatically accept LinkedIn connection requests.",
    "icons": {
      "48": "logo.png",
      "128": "logo.png"
    },
    "permissions": [
      "storage"
    ],
    "browser_action": {
      "default_icon": {
        "48": "logo.png",
        "128": "logo.png"
      },
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  